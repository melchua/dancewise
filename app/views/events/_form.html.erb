<div class="form-style">
  <%= bootstrap_form_for(@event, data: { controller: "places", action: "google-maps-callback@window->places#initMap" }) do |f| %>
    <%= f.text_field :name, placeholder: 'Name of your event' %>
    <%= f.text_field :description, placeholder: 'Description of your event' %>
    <%= f.text_field :address, data: { target: "places.field" } %>
    <%= f.collection_select :event_type_id, EventType.all, :id, :name %>
    <%= f.collection_check_boxes :dance_style_ids, DanceStyle.all, :id, :name %>
    <%= f.collection_select :event_frequency_id, EventFrequency.all, :id, :name %>
    <%= f.collection_check_boxes :artist_ids, Artist.all, :id, :name %>
    <%= f.file_field :event_image %>
    <%= f.date_field :event_start_date, wrapper: { class: "date"} %>
    <%= f.date_field :event_end_date, wrapper: { class: "date"} %>
    <%= f.text_field :website_url, label: "Event Website Link", placeholder: 'http://www.yourevent.com' %>
    <%= f.text_field :ticket_url, label: "Passes Link", placeholder: 'http://yourticketsite.com/yourevent' %>
    <%= f.text_field :facebook_url, label: "Facebook Event Link", placeholder: 'https://www.facebook.com/events/12356/' %>
    <%= f.text_field :instagram_url, label: "Instgram Link", placeholder: 'http://www.instagram.com/yourevent' %>
    <%= f.submit "Submit Event" %>
  <% end %>
</div>