<div class="show-page-wrapper">

  <div class="container">
    <h2>Showing artist details</h1>

    <div class="-">
    <% if @artist.avatar.attached? %>
              <%= image_tag @artist.avatar, class: "even-size-artist" %>
            <% else %>
              <img src=<%= "https://dancewise.s3.amazonaws.com/misc-images/Blank+Avatar.png" %> class="artist-page-image">
            <% end %>
    <% if @artist.dance_styles.any? %>
      <div class="row row-cols-4">
        <div class="mt-2">
          <%= render @artist.dance_styles %>
        </div>
      </div>
    <% end %>
  <div class="card-body">
    <%# <h5 class="card-title"><%= @artist.name </h5> %>
      <%# <p class="card-text"><%= @artist.description </p> %>
    </div>

  <div class="artist-video-wrapper">
    <h3>Artist Videos</h3>
 
  
  <div class="row row-cols-4">
      <% if @artist.first_video_id.nil? %>
    <div>Empty.</div>
      <% else %>
  <div class="plyr__video-embed" id="player">
    <iframe
      src="<%= @artist.youtube_embed_url %>?origin=https://plyr.io&amp;iv_load_policy=3&amp;modestbranding=1&amp;playsinline=1&amp;showinfo=0&amp;rel=0&amp;enablejsapi=1"
      allowfullscreen
      allowtransparency
      allow="autoplay"
    ></iframe>
  </div>
  <% end %>
  </div>

  </div>

  <div class="">
  <h3>Current Booked Events</h3>
    <% if @artist.events.any? %>
      <div class="row row-cols-4">
        <%= render @artist.events %>
      </div>
        <% end %>
    </div>

    <div class="data-control-wrapper">
      <% if logged_in? && current_user.admin? %>
        <%= link_to '<button type="button" class="btn btn-outline-primary">
        Edit artist
        </button>'.html_safe, edit_artist_path(@artist) %>

        <%= link_to '<button type="button" class="btn btn-outline-danger mt-1">
        Delete artist
        </button>'.html_safe, artist_path(@artist), method: :delete, data: { confirm: "Are you sure?"} %>
      <% end %>
    </div>
  </div>
  </div>
  </div>
</div>
