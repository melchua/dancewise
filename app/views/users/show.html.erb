<div class="container">
  <h2>Showing User Details</h1>

  <%= image_tag avatar_url(current_user), class: "img-circle avatar_xlarge" %>

  <div>
    <%= link_to "Edit your profile", edit_user_path(@user) %>
  </div>

  <p><%= @user.username %></p>
  <p><%= @user.email %></p>

  <h3>Events created</h3>
  <div class="row row-cols-4">
    <%= render @user.events %>
  </div>
</div>